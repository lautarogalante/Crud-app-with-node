<div class="container">
    <div class="row">
        <div class="col-md-5 offset-md-3">

            <div class="car card-body bg-dark p-4 text-white">
                <form action="/tasks/{{task._id}}/edit" , method="POST">
                    <div class="mb-3">
                         <input type="text" name="title" placeholder="Title" value="{{task.title}}"class="form-control rounded-0 bg-dark text-white">
                    </div>
                    <div class="mb-3">
                        <textarea name="description" rows="10" placeholder="Add a Description"
                        class="form-control rounded-0 bg-dark text-white">{{task.description}}</textarea>
                    </div>
                    <button>Update</button>
                </form>
            </div>

        </div>
    </div>
</div>